<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">


              <a class="list-group-item" href="/user/"><i class="fa fa-home"></i> Home</a>

              <a class="list-group-item" href="/user/my-account"><i class="fa fa-user"></i> My Profile</a>
              <a class="list-group-item" href="/user/create-new-case"><i class="fa fa-plus"></i> Create New Case</a>
              <a class="list-group-item" href="/user/my-cases"><i class="fa fa-list"></i> My Cases</a>
              <a class="list-group-item active" href="/user/change-password"><i class="fa fa-lock"></i> Change Password</a>
              <a class="list-group-item" href="/user/logout"><i class="fa fa-sign-out"></i> Log Out</a>

            </div>
        </div>
        <div class="col-md-8">
          <div class="panel panel-primary">
            <div class="panel-heading text-center">
              Change Password
            </div>
             <div class="panel-body">
               <form class="upload" action="/api/v1/change-password" method="post">

                  <div class="form-group text-center">
                    <span class="fa-stack fa-lg fa-5x text-primary">
                      <i class="fa fa-circle fa-stack-2x fa-5x"></i>
                      <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                  </div>
                        <div class="form-group">
                            <label>Current Password</label>
                            <input type="password"  name="cpass" placeholder="Current Password" class="form-control">
                        </div>

                      <div class="form-group">
                          <label>New Password</label>
                          <input type="password"  name="npass" placeholder="New Password" class="form-control">
                      </div>
                        <div class="form-group">
                            <label>Repeat Password</label>
                            <input type="password"  name="rpass" placeholder="Repeat Password" class="form-control">
                        </div>

                    <div class="form-group">
                      <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
                    </div>


                </div>

                </form>
             </div>
        </div>
    </div>
</div>
